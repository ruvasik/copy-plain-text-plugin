{
  "name": "copy-plain-text",
  "displayName": "Copy as Plain Text",
  "description": "Copy selected text as plain text, removing Markdown/HTML markup while preserving line breaks and indentation",
  "version": "1.0.0",
  "publisher": "Vladimir @ruvasik Alekseev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvasik/copy-plain-text-plugin"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copy",
    "plain text",
    "markdown",
    "html",
    "clipboard"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyPlainText.copy",
        "title": "Copy as Plain Text"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copyPlainText.copy",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste@100"
        }
      ]
    },
    "keybindings": [
      {
        "command": "copyPlainText.copy",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
